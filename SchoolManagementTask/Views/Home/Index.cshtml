@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="https://gouldnetworks.com/wp-content/uploads/2016/06/classroom-inspire-1280x500.jpg" alt="ASP.NET" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The secrete in Education lies in Respecting the Student.
                </p>
            </div>
        </div>
        <div class="item">
            <img src="https://www.learningenrichmentstudio.com.au/wp-content/uploads/2016/08/Banner3-1280x500.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    About Think! Online Education.
                   
                </p>
            </div>
        </div>
        <div class="item">
            <img src="http://children.hersheylibrary.org/wp-content/uploads/2017/08/slider_1280x500_kids.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Groom the Future of your Child.
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Students</div>
            <div class="panel-body">
                <h3 style="color:green;">@ViewBag.StudentsCount</h3>
                <a href="Student/AllStudents">Show All</a>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="panel panel-default">
            <div class="panel-heading">Teachers</div>
            <div class="panel-body">
                <h3 style="color:green;">@ViewBag.TeachersCount</h3>
                <a href="Student/AllStudents">Show All</a>
            </div>
        </div>
    </div>
</div>